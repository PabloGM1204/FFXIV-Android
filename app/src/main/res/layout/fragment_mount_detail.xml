<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/mount_img"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars"/>

    <!-- ID -->
    <TextView
        android:id="@+id/label_mount_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        app:layout_constraintTop_toBottomOf="@id/mount_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/mount_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/label_mount_id"
        app:layout_constraintTop_toTopOf="@id/label_mount_id"
        app:layout_constraintBottom_toBottomOf="@id/label_mount_id"
        tools:text="001"/>

    <!-- Nombre -->
    <TextView
        android:id="@+id/label_mount_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        app:layout_constraintTop_toBottomOf="@id/label_mount_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/mount_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/label_mount_name"
        app:layout_constraintTop_toTopOf="@id/label_mount_name"
        app:layout_constraintBottom_toBottomOf="@id/label_mount_name"
        tools:text="Montura"/>

    <!-- Descripcion -->
    <TextView
        android:id="@+id/label_mount_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n: "
        app:layout_constraintTop_toBottomOf="@id/label_mount_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/mount_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/label_mount_description"
        app:layout_constraintTop_toTopOf="@id/label_mount_description"
        app:layout_constraintBottom_toBottomOf="@id/label_mount_description"
        tools:text="Montura to wapa"/>

    <!-- Obtenido -->
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/is_obtained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Obtenido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mount_img" />

</androidx.constraintlayout.widget.ConstraintLayout>